root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

# Python files - follows PEP 8 standards
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[*.{json,jsonc}]
indent_size = 2

[*.{toml,cfg,ini}]
indent_size = 4

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
indent_size = 4

[*.{rs,rust}]
indent_size = 4
max_line_length = 100

[*.rb]
indent_size = 2
max_line_length = 120