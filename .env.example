# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_BOT_NAME=autogen-review-bot

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true

# Database Configuration (for production deployments)
DATABASE_URL=postgresql://user:password@localhost:5432/autogen_review
REDIS_URL=redis://localhost:6379/0

# OpenAI/Azure OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Agent Configuration
CODER_AGENT_MODEL=gpt-4
REVIEWER_AGENT_MODEL=gpt-4
AGENT_TEMPERATURE=0.3
AGENT_MAX_TOKENS=2000

# Cache Configuration
CACHE_ENABLED=true
CACHE_DIR=~/.cache/autogen-review
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=1024

# Performance Configuration
PARALLEL_PROCESSING=true
MAX_WORKERS=4
ANALYSIS_TIMEOUT=300

# Security Configuration
SECRET_KEY=your-flask-secret-key-for-sessions
WEBHOOK_VERIFY_SSL=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8080
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn-here

# Tool Configuration
RUFF_CONFIG_PATH=pyproject.toml
BANDIT_CONFIG_PATH=.bandit
ESLINT_CONFIG_PATH=.eslintrc.js
CUSTOM_LINTER_CONFIG=linters.yaml

# Webhook Configuration
WEBHOOK_PATH=/webhook
WEBHOOK_QUEUE_SIZE=100
WEBHOOK_WORKER_COUNT=4

# Review Configuration
MAX_PR_SIZE=1000
MAX_FILES_PER_PR=50
REVIEW_TIMEOUT_MINUTES=15
ENABLE_AUTO_MERGE=false

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url
EMAIL_NOTIFICATIONS=false

# Development Tools
PRE_COMMIT_ENABLED=true
COVERAGE_THRESHOLD=95
MUTATION_TESTING=false

# Feature Flags
ENABLE_CONVERSATION_LOGGING=true
ENABLE_PERFORMANCE_PROFILING=false
ENABLE_EXPERIMENTAL_FEATURES=false