{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Bot (Debug)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/bot.py",
      "args": ["--config", "agent_config.yaml", "--debug"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Review PR",
      "type": "python", 
      "request": "launch",
      "program": "${workspaceFolder}/review_pr.py",
      "args": ["--pr-number", "1", "--repo", "owner/repo"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Tests (Current File)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Tests (All)",
      "type": "python",
      "request": "launch", 
      "module": "pytest",
      "args": ["tests/", "-v", "--cov=src"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}
EOF < /dev/null
